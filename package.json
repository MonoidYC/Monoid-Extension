{
  "name": "monoid-visualize",
  "displayName": "monoid-visualize",
  "publisher": "monoid",
  "description": "Monoid's visualize extension that can convert code into nodes",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:monoid-visualize.visualizeAllCode",
    "onCommand:monoid-visualize.openGraphPanel",
    "onView:monoid-visualize.graphView",
    "onUri"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "monoid-visualize.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "monoid-visualize.signIn",
        "title": "Monoid: Sign In",
        "icon": "$(account)"
      },
      {
        "command": "monoid-visualize.signOut",
        "title": "Monoid: Sign Out",
        "icon": "$(sign-out)"
      },
      {
        "command": "monoid-visualize.visualizeAllCode",
        "title": "Monoid: Visualize All Code",
        "icon": "$(graph)"
      },
      {
        "command": "monoid-visualize.openGraphPanel",
        "title": "Monoid: Open Graph Panel",
        "icon": "$(preview)"
      },
      {
        "command": "monoid-visualize.refreshGraph",
        "title": "Monoid: Refresh Graph",
        "icon": "$(refresh)"
      },
      {
        "command": "monoid-visualize.testLM",
        "title": "Monoid: Test VS Code LM",
        "icon": "$(beaker)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "monoid-visualize",
          "title": "Monoid Visualize",
          "icon": "$(graph)"
        }
      ]
    },
    "views": {
      "monoid-visualize": [
        {
          "type": "webview",
          "id": "monoid-visualize.graphView",
          "name": "Code Graph"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "monoid-visualize.visualizeAllCode",
          "when": "view == monoid-visualize.graphView",
          "group": "navigation"
        },
        {
          "command": "monoid-visualize.refreshGraph",
          "when": "view == monoid-visualize.graphView",
          "group": "navigation"
        }
      ],
      "view/item/context": [],
      "editor/context": []
    },
    "configuration": {
      "title": "Monoid Visualize",
      "properties": {
        "monoid-visualize.supabaseUrl": {
          "type": "string",
          "default": "",
          "description": "Supabase project URL"
        },
        "monoid-visualize.supabaseAnonKey": {
          "type": "string",
          "default": "",
          "description": "Supabase anon key"
        },
        "monoid-visualize.workspaceSlug": {
          "type": "string",
          "default": "",
          "description": "Workspace slug for storing code graphs"
        },
        "monoid-visualize.webAppUrl": {
          "type": "string",
          "default": "https://monoid-dashboard.vercel.app",
          "description": "URL of the Monoid dashboard to embed in the graph panel"
        },
        "monoid-visualize.githubOwner": {
          "type": "string",
          "default": "",
          "description": "GitHub repository owner (e.g., 'tanujsiripurapu')"
        },
        "monoid-visualize.githubRepo": {
          "type": "string",
          "default": "",
          "description": "GitHub repository name (e.g., 'my-app')"
        },
        "monoid-visualize.githubBranch": {
          "type": "string",
          "default": "main",
          "description": "GitHub branch name for generating links"
        },
        "monoid-visualize.geminiApiKey": {
          "type": "string",
          "default": "",
          "description": "Google Gemini API key for generating node summaries. Get one at https://aistudio.google.com/apikey"
        },
        "monoid-visualize.enableLlmEnrichment": {
          "type": "boolean",
          "default": false,
          "description": "Enable optional LLM enrichment (Gemini snippets/summaries and extra relationship detection). Requires monoid-visualize.geminiApiKey."
        },
        "monoid-visualize.authRedirectUrl": {
          "type": "string",
          "default": "",
          "description": "Optional override for the hosted auth callback URL (defaults to <webAppUrl>/auth/callback)."
        },
        "monoid-visualize.geminiModel": {
          "type": "string",
          "default": "gemini-3-flash-preview",
          "description": "Gemini model to use (e.g., gemini-2.0-flash, gemini-1.5-pro)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.108.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.49.2"
  }
}
