{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$esbuild-watch",
			"isBackground": true,
            "presentation": {
                "reveal": "never"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "npm",
			"script": "compile",
			"problemMatcher": "$tsc"
		}
	],
	"problemMatchers": [
		{
			"name": "esbuild-watch",
			"owner": "esbuild",
			"fileLocation": ["relative", "${workspaceFolder}"],
			"pattern": [
				{
					"regexp": "^âœ˜ \\[ERROR\\] (.*)$",
					"message": 1
        },
		{
					"regexp": "^\\s+(.*):(\\d+):(\\d+):$",
					"file": 1,
					"line": 2,
					"column": 3
				}
			],
			"background": {
				"activeOnStart": true,
				"beginsPattern": "^\\[watch\\] build started",
				"endsPattern": "^\\[watch\\] build finished"
			}
		}
	]
}
